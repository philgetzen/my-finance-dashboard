rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // YNAB tokens - users can only access their own tokens
    match /ynab_tokens/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Manual accounts - users can only access their own accounts
    match /manual_accounts/{accountId} {
      allow read: if isAuthenticated() && resource.data.user_id == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.user_id == request.auth.uid;
    }

    // User holdings - users can only access their own holdings
    match /user_holdings/{holdingId} {
      allow read: if isAuthenticated() && resource.data.user_id == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.user_id == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.user_id == request.auth.uid;
    }

    // CSP Settings - users can only access their own settings
    // Document ID is the user's UID
    match /csp_settings/{userId} {
      allow read, write: if isOwner(userId);
    }
  }
}
